# Database configuration
# The type of database to use. Valid values are 'postgres' and 'sqlite'. (Default: none, required)
DB_TYPE=postgres

# The connection string for the database. (Default: none, required)
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Security and session management
# The secret key for session management. (Default: none, required)
SECRET_KEY=your_secret_key_here

# The secret hash key for generating secure tokens. (Default: none, required)
HASH_KEY=your_hash_key_here

# Email configuration
# The email address to send emails from. (Default: none, required)
EMAIL_SENDER=you@example.com

# The password for the email sender. (Default: none, required)
EMAIL_PASSWORD=your_email_password

# The SMTP host for sending emails. (Default: none, required)
SMTP_HOST=smtp.example.com

# The SMTP port for sending emails. Valid values are integers. (Default: none, required)
SMTP_PORT=587

# The reply-to email address for outgoing emails. (Default: none, required)
EMAIL_REPLY_TO=replyto@example.com

# Web server configuration
# The address where the web server will be hosted. (Default: none, required)
WEB_SERVER_ADDRESS=https://yourdomain.com

# reCAPTCHA configuration (optional)
# The site key for reCAPTCHA. (Default: none, optional)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# The secret key for reCAPTCHA. (Default: none, optional)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Whether to use reCAPTCHA. Valid values are 'true' or 'false'. (Default: false, optional)
USE_RECAPTCHA=false

# User and group for dropping privileges (optional)
# The user name or ID for dropping privileges. (Default: none, optional)
USER=your_username_or_id

# The group name or ID for dropping privileges. (Default: none, optional)
GROUP=your_groupname_or_id

# JWT configuration (optional)
# Whether to use JWT authentication. Valid values are 'true' or 'false'. (Default: false, optional)
USE_JWT_AUTH=false

# The secret key for signing JWTs. (Default: none, required if USE_JWT_AUTH is true)
JWT_SECRET=your_jwt_secret_key

# The expiration time for JWTs in hours. Valid values are integers. (Default: 24, optional)
JWT_EXPIRATION_HOURS=24

# The secret key for signing refresh tokens. (Default: none, required if USE_JWT_AUTH is true)
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key

# The expiration time for refresh tokens in hours. Valid values are integers. (Default: 720, optional)
REFRESH_TOKEN_EXPIRATION_HOURS=720

# Miscellaneous
# Whether firstname and lastname are required. Valid values are 'true' or 'false'. (Default: false, optional)
REQUIRE_FIRST_AND_LAST_NAME=true
